#!/usr/bin/env node

/* jshint node: true */

'use strict';

/**
 * Read records from an Avro container file.
 *
 */

var streams = require('../lib'),
    util = require('util');

var fpath = process.argv[2];
if (!fpath) {
  console.error(util.format('usage: %s PATH', process.argv[1]));
  process.exit(1);
}

console.log(JSON.stringify(streams.extractFileHeader(fpath)));
